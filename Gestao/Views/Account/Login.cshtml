@model LoginViewModel

@{
    ViewData["Title"] = "Login no sistema";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />
<p>Estamos em fase de testes, por esse motivo erros podem acontecer.</p>
<br />

<form asp-action="Login" class="row">

    <div class="form-group col-sm-8 col-lg-4">

        <label asp-for="@Model.Email">E-mail: </label><br />
        <input asp-for="@Model.Email" class="form-control" />

        <span asp-validation-for="@Model.Email" class="text-danger"></span>

    </div> <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4">

        <label asp-for="@Model.Password">Senha: </label><br />
        <input asp-for="@Model.Password" class="form-control" />

        <span asp-validation-for="@Model.Password" class="text-danger"></span>

    </div> <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4">

        <div class="checkbox">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>

    </div> <div class="w-100"></div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Entrar</button>
    </div>

</form>