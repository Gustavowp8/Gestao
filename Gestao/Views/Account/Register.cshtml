@model RegisterViewModel

@{
    ViewData["Title"] = "Pagina de registro";
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<hr />
<p class="text-danger">Atenção esta e uma fase de testes em breve todos os novos registros passaram por confirmação do administrador.</p>
<br />

<form asp-action="Register" class="row">

    <div class="form-group col-sm-8 col-lg-4">

        <label asp-for="@Model.Email">E-mail: </label><br />
        <input asp-for="@Model.Email" class="form-control"/>

        <span asp-validation-for="@Model.Email" class="text-danger"></span>

    </div>
    <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4">

        <label asp-for="@Model.Password">Senha: </label><br />
        <input asp-for="@Model.Password" class="form-control"/>

        <span asp-validation-for="@Model.Password" class="text-danger"></span>

    </div>
    <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4">

        <label asp-for="@Model.ConfirmPassword">Repita a senha: </label><br />
        <input asp-for="@Model.ConfirmPassword" class="form-control"/>

        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

    </div>
    <div class="w-100"></div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>

</form>