@model SalasModel
@{
    ViewBag.Subtitulo = "Confirmar excluir Sala";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr />

<h4>Deseja realmente excluir a sala <span class="text-danger">@Model.Nome</span></h4>

<form asp-action="Excluir" class="w-25">

    <input type="hidden" asp-for="@Model.IdSala" />
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-success">Não</a>
        <button class="btn btn-danger" type="submit">Sim</button>
    </div>

</form>